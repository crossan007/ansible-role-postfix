## Mainly based off: https://arstechnica.com/information-technology/2014/03/taking-e-mail-back-part-2-arming-your-server-with-postfix-dovecot/2/
## These are all default Postfix settings that we won't change
## Alias maps explination: https://serverfault.com/questions/644306/confused-about-alias-maps-and-virtual-alias-maps
## https://serverfault.com/questions/415274/postfix-what-exactly-are-alias-domains

## Your mail server identity options
myhostname = {{ mail_hostname | mandatory }}
mydomain = {{mail_my_domain}}
myorigin = $mydomain
mydestination = {% for a in mail_my_destination %}{{a}} {% endfor %}

mynetworks = {{mail_my_networks}}

# Aliases are only use for _local_ deliveries..
alias_maps = hash:/etc/postfix/alias
alias_database = hash:/etc/postfix/alias

# Virtual maps for incoming mail
virtual_alias_domains = hash:/etc/postfix/virtual-alias-domains
virtual_alias_maps = hash:/etc/postfix/virtual-alias-maps

# fix delivering to incorrect /vmail/<u> instead of /vmail/<domain>/<u>
local_transport = lmtp:unix:private/dovecot-lmtp

append_dot_mydomain = yes
biff = no
broken_sasl_auth_clients = yes
inet_interfaces = all
mailbox_command = /usr/lib/dovecot/dovecot-lda -f "$SENDER" -a "$RECIPIENT"
mailbox_size_limit = 0
readme_directory = no
recipient_delimiter = +
relayhost =
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache
smtpd_sasl_auth_enable = yes
smtpd_sasl_authenticated_header = yes

# This makes Postfix use Dovecot for authenticating SMTP sessions
smtpd_sasl_path = private/auth
smtpd_sasl_security_options = noanonymous
smtpd_sasl_local_domain = $myhostname
smtpd_sasl_type = dovecot
smtpd_tls_auth_only = yes
smtpd_tls_received_header = yes
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache
tls_random_source = dev:/dev/urandom

## Customized smtpd paramters
smtpd_banner = $myhostname ESMTP
smtpd_helo_required = yes

smtpd_helo_restrictions = 
	permit_mynetworks,
	reject_non_fqdn_helo_hostname, 
	reject_invalid_helo_hostname,
	reject_unknown_helo_hostname, 
	permit

smtpd_recipient_restrictions = 
	permit_mynetworks, 
	reject_unknown_client_hostname,
	reject_unknown_sender_domain, 
	reject_unknown_recipient_domain,
	reject_unauth_pipelining, 
	permit_sasl_authenticated, 
	reject_unauth_destination, 
	reject_invalid_hostname, 
	reject_non_fqdn_sender

smtpd_sender_restrictions = 
	permit_mynetworks, 
	reject_unknown_sender_domain,
	reject_sender_login_mismatch

smtpd_sender_login_maps = $virtual_mailbox_maps

## Dealing with rejection: use permanent 550 errors to stop retries
unknown_address_reject_code = 550
unknown_hostname_reject_code = 550
unknown_client_reject_code = 550

## customized TLS parameters
smtpd_tls_ask_ccert = yes
smtpd_tls_cert_file = {{ssl_cert_file}}
smtpd_tls_key_file = {{ssl_key_file}}
smtpd_tls_CAfile = {{ssl_ca_file}}
smtpd_tls_ciphers = high
smtpd_tls_loglevel = 1
smtpd_tls_security_level = may
smtpd_tls_session_cache_timeout = 3600s

## Customized Dovecot and virtual user-specific settings
home_mailbox = Maildir/
message_size_limit = {{mail_size_limit}}



## This setting will generate an error if you restart Postfix before
## adding the appropriate service definition in master.cf, so make
## sure to get that taken care of!
dovecot_destination_recipient_limit = 1

